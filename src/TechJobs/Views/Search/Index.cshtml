

<h1>@ViewBag.title</h1>

<form action="/Search/Results">
    <h2>Search by:</h2>

    <p>
        @foreach (KeyValuePair<string, string> column in ViewBag.columns)
        {
            <span>
                <input type="radio"
                       name="searchType"
                       id="@column.Key"
                       value="@column.Key"
                       checked="@column.Key == 'all'" />
                
                <label for="@column.Key">@column.Value</label>
            </span>
        }
    </p>

    <p>
        <label for="searchTerm">Keyword:</label>
        <input type="text" name="searchTerm" id="searchTerm" />
    </p>

    <input type="submit" value="Search" />
</form>

<hr />

@if (ViewBag.jobs != null)
{

    <h3>@ViewBag.jobs.Count Result(s)</h3>

    // TODO #2 - Loop over jobs dictionary and display all job fields

    @for(int job = 0; job < ViewBag.jobs.Count; job++) //list of dictionary
    {
        int count = 0;  // counter for alternating row colors

        <table class="job-listing">
            @foreach (KeyValuePair<string, string> item in ViewBag.jobs[job])  //single dictionary item
            {
                <tr>
                    <td>@item.Key</td>
                    <td>@item.Value</td>
                </tr>

                count++;
            }
        </table>
    }
}
